<header class="header">
    <div class="container-fluid">
        <button class="mobile-menu-toggler" id="mobile_menu_toggler">
            <i class="fas fa-bars"></i>
        </button>

        <a href="{{ path('main_homepage') }}" class="logotype">
            <img src="{{ asset('build/images/icons/logo_366x79.svg') }}" alt="RankedChoice Logotype">
        </a>
        <nav class="main-nav">
            <ul class="menu">
                {{ render(controller(
                    'App\\Controller\\Main\\EmbedController::categories'
                )) }}

                <li class="menu-item font-weight-bold">
                    {% if app.user %}
                        <a href="{{ path('main_profile_index') }}">
                            <div>{{ app.user.email }}</div>
                        </a>
                    {% else %}
                        <a href="{{ path('main_login') }}">
                            <div>Login</div>
                        </a>
                    {% endif %}
                </li>
                <li class="menu-item font-weight-bold">
                    <a href="{{ path('main_cart_show') }}">
                        <div>Cart</div>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</header>